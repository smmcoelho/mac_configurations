# to get echo colors
. ~/bin/myEcho

_str=""
while [ "$*" != "" ]
do
    if [ -z "${_str}" ] ; then
        _str="-name ${1} "
    else
        _str="${_str} -o -name ${1} "
    fi
    shift
done

rm -rf `find . ${_str}`
